{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "storageAccountName": {
             "type": "string"
       },
       "accountList": {
             "defaultValue": [
                "rory",
                "buddy",
                "aben",
                "dan"
             ],
             "type": "array"
       }
    },
    "resources": [{
       "apiVersion": "2016-01-01",
       "type": "Microsoft.Storage/storageAccounts",
       "name": "[concat(parameters('storageAccountName'),parameters('accountList')[copyIndex()])]",
       "location": "[resourceGroup().location]",
       "sku": {
             "name": "Standard_LRS"
       },
       "kind": "Storage",
       "properties": {},
       "copy": {
             "name": "storagecopy",
             "count": "[length(parameters('accountList'))]"
       }
    }],
    "outputs": {}
 }